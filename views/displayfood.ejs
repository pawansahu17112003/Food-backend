<html>
<link href="/stylesheets/style.css" rel="stylesheet" />

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/javascripts/project.js"></script>
</head>

<body>
    <form action="/food/food_edit" method="post">
        <input type="hidden" name="foodid" value="<%=data.foodid %>" />
        <div class="root">
            <div class="box" style="height: 400px;">
                <div class="title_box">
                    <div class="inner_box">
                        <img src="/images/logo.png" style="width: 90px;  margin-top: 20px;" />
                        <div class="title_text text_box" style="color: yellow;">Update</div>
                    </div>
                    <div style="margin-left: auto;">
                        <a href="http://localhost:3000/food/food_list"> <img src="/images/meal.png"
                                style="width: 50px;"> </a>

                    </div>
                </div>
                <div class="container">
                    <div class="row " style="margin-top: 10px;">
                        <div class="col-sm-4">
                            <select class="form-select" id="categoryid" name="categoryid">
                                <option value="<%=data.categoryid %>">
                                    <%=data.categoryname %>
                                </option>
                            </select>


                        </div>
                        <div class="col-sm-4">
                            <select required class="form-select" id="subcategoryid" name="subcategoryid">
                                <option value="<%=data.subcategoryid %>">
                                    <%=data.subcategoryname %>
                                </option>

                            </select>
                        </div>
                        <div class="col-sm-4">
                            <input required type="text" class="form-control" value="<%=data.foodname %>" name="foodname"
                                placeholder="Food Name" />


                        </div>
                    </div>

                    <div class="row " style="margin-top: 10px;">
                        <div class="col-sm-12">
                            <textarea class="form-control" name="ingredients" value="<%=data.ingredients %>"
                                row="3"><%=data.ingredients %> </textarea>

                        </div>
                    </div>
                    <div class="row " style="margin-top: 10px;">


                        <div class="col-sm-4">
                            <input required type="text" value="<%=data.price %>" name="price" class="form-control"
                                placeholder="Price" />

                        </div>


                        <div class="col-sm-4">
                            <input required type="text" class="form-control" value="<%=data.halfprice %>"
                                name="halfprice" placeholder="Half Price" />

                        </div>


                        <div class="col-sm-4">
                            <input required class="text" class="form-control" value="<%=data.offer %>" name="offer"
                                placeholder="Offer" />

                        </div>

                    </div>
                    <div class="row " style="margin-top: 30px;">
                        <div class="col-sm-6 stylecenter">
                            <div class="form-check form-switch">
                                <% 
                                var chk='' 
                                var lbl=data.foodtype 
                                if(data.foodtype=="Non Vegeterian" ) {chk='checked' } 
                                    %>

                                    <input <%=chk %> class="form-check-input" type="checkbox" role="switch"
                                    name="foodtype"
                                    value="<%=data.foodtype %>" id="flexSwitchCheckDefault">
                                        <label class="form-check-label" id="foodtypelabel">
                                            <%=lbl %>
                                        </label>
                            </div>
         
                        </div>
                        <div class="col-sm-6 stylecenter">
                            <div class="form-check">
                                <input <%=(data.status=='Available' )?'checked':'' %> class="form-check-input"
                                type="radio" name="status" value="Available" >
                                <label class="form-check-label">
                                    Available
                                </label>

                            </div>
                            <div class="form-check" style="margin-left: 20px;">
                                <input <%=(data.status==' Not Available' )?'checked':'' %> class="form-check-input"
                                name="status" value=" Not Available" type="radio">
                                <label class="form-check-label" for="exampleRadios1">
                                    Not Available
                                </label>
                            </div>



                        </div>
                    </div>

                    <div class="row " style="margin-top: 30px;">
                        <div class="col-sm-6 stylecenter">
                            <button name="btn" value="Edit" type="submit" class="btn btn-danger"
                                style="color:  white; width: 60%; font-weight: 600;background-color:  blue;">Edit</button>
                        </div>
                        <div class="col-sm-6 stylecenter">
                            <button name="btn" value="Delete" type="submit" class="btn btn-danger"
                                style="color:  white; width: 60%; font-weight: 600;">Delete</button>
                        </div>
                    </div>


                </div>
            </div>
    </form>
</body>

</html>