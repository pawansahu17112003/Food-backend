<html>

<head>
    <link href="/stylesheets/style.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet" />

</head>

<body>
    <div class="root"  >
        <div class="box_display">
            <div class="title_box">
                <div class="inner_box">
                    <img src="/images/logo.png" style="width: 90px;  margin-top: 20px;" />
                    <div class="title_text text_box" style="color: yellow;">List Foods</div>
                </div>
                <div style="margin-left: auto;">
                 <a href="http://localhost:3000/food/food_interface">  <img src="/images/order-food.png" style="width: 50px;"></a>  
                </div>
            </div>
            <table class="table table-striped" style="margin-top: 10px;">
                <thead>
                    <tr>
                        <th>FoodId</th>
                        <th>Category</th>
                        <th>Food Name</th>
                        <th>Price</th>
                        <th>Offer</th>
                        <th>Foodtype</th>
                        <th>Status</th>
                        <th>Image</th>
                        <th>Update</th>
                    </tr>

                </thead>
                <tbody>
                    <% data.map((item)=>{ %>
                        <tr>
                            <td>
                                <%=item.foodid %>
                            </td>
                            <td>
                                <%=item.categoryid %>,
                                    <%=item.subcategoryid %>

                            </td>
                            <td>
                                <%=item.foodname %>
                            </td>
                            <td>
                                <%=item.price %>,
                                    <%=item.halfprice %>
                            </td>
                            <td>
                                <%=item.offer %>
                            </td>
                            <td>
                                <%=item.foodtype %>
                            </td>
                            <td>
                                <%=item.status %>
                            </td>
                            <td>
                             <a href="/food/edit_picture?foodid=<%=item.foodid %>&foodname=<%=item.foodname %>&picture=<%=item.picture %>">  <img src="/images/<%=item.picture %>" style="width: 30px; height: 30px; border-radius: 5px;"></a> 
                            </td>

                            <td>
                              <a href="/food/display_food?foodid=<%=item.foodid %>"> Edit/Delete </a>
                            </td>

                        </tr>



                        <% }) %>

                </body>


            </table>
        </div>
    </div>
</body>

</html>